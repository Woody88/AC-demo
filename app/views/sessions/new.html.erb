<% provide(:title, "Login") %>
<h1>Log in</h1>
<div class="row">
	<div class="medium-6 medium-offset-3 column">
		<%= form_for(:session, url: login_path) do |f| %>

			<%= f.label :email %>
			<%=f.text_field :email %>

			<%= f.label :password %>
			<%=f.password_field :password %>

			<%= f.label :remember_me do %>
        	<%= f.check_box :remember_me %>
        	Remember me on this computer
        	
      	<% end %>

			<%= f.submit "Log in", class: "button [radius round]" %>
		<% end %>

		<p>New user?<%= link_to " Sign up now!", signup_path %></p>
	</div>
</div>


